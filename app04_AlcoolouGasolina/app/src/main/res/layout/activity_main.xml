<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/a711842b6042f28b39920ed5bcf0087c_icon"
            android:id="@+id/imageView3"
            android:scaleX="0.6"
            android:scaleY="0.16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.462"
            app:layout_constraintBottom_toTopOf="@+id/txtDesc"/>
    <TextView
            android:text="Saiba o melhor combustível para abastecer!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDesc"
            android:textAlignment="center"
            android:textSize="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintVertical_bias="0.304"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="45dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/alcool"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:singleLine="false"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/txtDesc"
            android:layout_marginTop="76dp"
            android:hint="Por exemplo: 4,01"/>
    <Button
            android:text="Calcular"
            android:layout_width="340dp"
            android:layout_height="54dp"
            android:id="@+id/btnCalcular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gasolina"
            android:layout_marginTop="56dp"
            app:layout_constraintHorizontal_bias="0.492"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="43dp"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/gasolina"
            app:layout_constraintTop_toBottomOf="@+id/alcool"
            android:layout_marginTop="36dp"
            app:layout_constraintBottom_toTopOf="@+id/btnCalcular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center"
            android:hint="Por Exemplo: 5,04"/>
    <TextView
            android:text="Preço do Álcool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDesc2"
            android:textAlignment="center"
            android:textSize="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.41"/>
    <TextView
            android:text="Preço da Gasolina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDesc3"
            android:textAlignment="center"
            android:textSize="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.523"/>

</androidx.constraintlayout.widget.ConstraintLayout>